<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="500.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample_app.events.Controller">
   <children>
      <HBox>
         <children>
            <ChoiceBox fx:id="db_function" maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS" />
            <Button fx:id="btn_apply" mnemonicParsing="false" onAction="#sendEvent" text="appy" />
            <Button fx:id="btn_switchToTable" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#sendEvent" text="switch to table" HBox.hgrow="ALWAYS" />
            <Button fx:id="btn_switchToList" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#sendEvent" text="switch to list" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
      <LineChart fx:id="lineChart" maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS">
        <xAxis>
          <NumberAxis side="BOTTOM" />
        </xAxis>
        <yAxis>
          <NumberAxis side="LEFT" />
        </yAxis>
      </LineChart>
   </children>
</VBox>
