<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample_app.events.Controller">
   <children>
      <TextField fx:id="tf_name" promptText="name" />
      <TextField fx:id="tf_surname" promptText="surname" />
      <HBox>
         <children>
            <Label prefWidth="5.0" text=" " />
            <Label text="gender:" />
         </children>
      </HBox>
      <HBox />
      <HBox>
         <children>
            <Label prefWidth="5.0" text=" " />
            <RadioButton fx:id="rb_female" mnemonicParsing="false" text="female">
               <toggleGroup>
                  <ToggleGroup fx:id="toggleGroup" />
               </toggleGroup>
            </RadioButton>
            <Label prefWidth="10.0" text=" " />
            <RadioButton fx:id="rb_male" mnemonicParsing="false" text="male" toggleGroup="$toggleGroup" />
         </children>
      </HBox>
      <Separator prefWidth="200.0" />
      <HBox>
         <children>
            <Label prefWidth="5.0" text=" " />
            <Label text="age:" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
      <HBox>
         <children>
            <Label prefWidth="5.0" text=" " />
            <Slider fx:id="slider_age" min="16.0" HBox.hgrow="ALWAYS" />
            <Label prefWidth="5.0" text=" " />
         </children>
      </HBox>
      <Button fx:id="btn_save" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#sendEvent" text="save" />
   </children>
</VBox>
